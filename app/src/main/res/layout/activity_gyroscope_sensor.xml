<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EFDC"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="30dp"
    tools:context=".GyroscopeSensor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Gyroscope tang speed"
        android:layout_marginBottom="150dp"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tvGX"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="on X speed=?"/>

    <TextView
        android:id="@+id/tvGY"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="on Y speed=?"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/tvGZ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="on Z speed=?"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/bRegL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:text="Register sensor listener" />

    <Button
        android:id="@+id/bUnRegL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Unregister sensor listener" />

</LinearLayout>